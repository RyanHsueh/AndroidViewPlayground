<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HeartRatePulseActivity">

    <TextView
        android:id="@+id/text_hr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="60sp"
        android:text="0"/>
    <Button
        android:id="@+id/btn_pulse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start pulse"/>
    <Button
        android:id="@+id/btn_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="stop pulse"/>

    <com.example.ryanhsueh.androidviewplayground.customView.HeartRatePulseView
        android:id="@+id/hr_pulse_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="16dp"/>


</LinearLayout>